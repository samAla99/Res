    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Resumen</div>
                        <a class="nav-link" href=" @Url.Action("Index","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Nosotros
                        </a>

                        <a class="nav-link" href="@Url.Action("Usuario","home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Usuario
                        </a>

                     
                        <div class="sb-sidenav-menu-heading">Mas Infoemaciones</div>
                        <a class="nav-link" href="@Url.Action("Categoria","Mantenimiento")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Pedidos
                        </a>
                        <a class="nav-link" href="@Url.Action("Tipo","Mantenimiento")">
